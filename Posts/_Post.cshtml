@{
    var post = Page.Post;
    var url = "/Posts/Post.cshtml"+"?id=" + @post.ID;
}

<div class="post">

    <h3 class="titulo-post"><a class="enlace-post" href="@url">@post.Titulo</a></h3>
    <span class="fecha-post">Creado el @post.Fecha</span>

    <div class="contenido-post">@post.Contenido</div>
        
    <div class="comparte-post">
        <a href="http://twitter.com/share" class="twitter-share-button" data-text="@post.Titulo" data-url="@url">Compartelo en Twitter</a>
    </div>
    <hr/>

</div>

        